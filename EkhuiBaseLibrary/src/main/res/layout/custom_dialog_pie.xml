<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/qb_px_50"
        android:layout_height="@dimen/qb_px_50"
        android:background="@drawable/dialog_round"
        android:gravity="center"
        android:orientation="vertical">


        <com.example.ekhuibaselibrary.custom.PieProgressView
            android:id="@+id/pie"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_gravity="center"
            app:srp_max="100"
            app:srp_progressColor="@color/white"
            app:srp_roundColor="@color/transparent"
            app:srp_startAngle="270"
            app:srp_style="FILL" />


        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/qb_px_7"
            android:text="Message"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>